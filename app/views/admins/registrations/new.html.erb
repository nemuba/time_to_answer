<div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
          <div class="col-lg-7">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Criar conta !</h1>
              </div>              
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "user") do |f| %>                

                <%= render "admins/shared/error_messages", resource: resource %>              
                
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control form-control-user" %>                  
                </div>
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <% if @minimum_password_length %>
                    <em>      
                      <%= (@minimum_password_length >1) ? t('devise.shared.minimum_password_length.other',count: @minimum_password_length) : t('devise.shared.minimum_password_length.one', count: @minimum_password_length)%>
                    </em>
                    <% end %><br />
                    <%= f.password_field :password, placeholder: "Password", class: "form-control form-control-user" %>                    
                  </div>
                  <div class="col-sm-6">
                    <br />
                    <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control form-control-user" %>                    
                  </div>
                </div>

                <%= f.submit t('devise.shared.links.sign_up'), class: "btn btn-primary btn-user btn-block" %>
                                
              <% end %>
              <hr>
              <%= render "admins/shared/links" %>              
            </div>
          </div>
        </div>
      </div>
    </div>











