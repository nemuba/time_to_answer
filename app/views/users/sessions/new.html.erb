<div class="form">
  <section class="login_content">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal form-label-left") do |f| %>            
    <h1><%= t('devise.shared.links.sign_in')%></h1>
    <div>      
      <%= f.email_field :email, class: "form-control", placeholder: "Email" %>                
    </div>

    <div>      
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>                                
    </div>              

    <div>
        <%= f.submit t('devise.shared.links.sign_in'), class: 'btn btn-default submit' %>        
    </div>

    <div class="clearfix"></div>

    <div class="separator">
      <%= link_to t('devise.shared.links.sign_up'), new_registration_path(resource_name), class: "to_register" %>      
    </div>
    <% end %>
        
  </section>
</div>


