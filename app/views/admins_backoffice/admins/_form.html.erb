<div class="row">
  <div class="col-lg-12">
    <h1 class="h3 mb-4 text-gray-800"><%= action_message %> Usuário</h1>    
  </div>  
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        Detalhes do usuário
      </div>
      <div class="card-body">
        <div class="card-text">
        <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>          
            <div class="form-group">
              <%= form.label :email %>
              <%= form.email_field :email, class: 'form-control', placeholder: 'admin@example.com' %>                
            </div>
            <div class="form-group">
              <%= form.label :password %>
              <%= form.password_field :password, class: 'form-control', placeholder: 'Senha' %>                         
            </div>  
            <div class="form-group">
              <%= form.label :password_confirmation %>
              <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmação de Senha' %>                                
            </div>  

            <%= form.submit nil, class: 'btn btn-primary float-right'%>
                                          
            <%= link_to 'Voltar', admins_backoffice_admins_path, class: 'btn btn-danger float-left' %>                    
        <% end %>

          
        </div>
      </div>
    </div>    
  </div>  
</div>