<div class="row">
  <div class="col-lg-12">
    <h1 class="h3 mb-4 text-gray-800"><%= action_message %> Pergunta</h1>    
  </div>  
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        Detalhes da Pergunta
      </div>
      <div class="card-body">
        <div class="card-text">
        <%= form_with(model: [ :admins_backoffice, @question ], local: true) do |form| %>          
            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: 'form-control', placeholder: 'Descreva aqui ...', rows: 5 %>                
            </div>
            <div class="form-group">
              <%= form.label :subject_id %>
              <%= form.select :subject_id, list_subjects, {prompt: true}, {class: 'form-control', placeholder: 'Senha'} %>                         
            </div>  
            

            <%= form.submit nil, class: 'btn btn-primary float-right'%>
                                          
            <%= link_to 'Voltar', admins_backoffice_questions_path, class: 'btn btn-danger float-left' %>                    
        <% end %>

          
        </div>
      </div>
    </div>    
  </div>  
</div>