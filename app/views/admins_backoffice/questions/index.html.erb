<!-- Page Heading -->

<div class="row">
  <div class="col-lg-12">
    <h1 class="h3 mb-4 text-gray-800">AdminsBackoffice</h1>    
  </div>  
</div>

<!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Listando Questões</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Descrição</th>                      
                      <th style="text-align: center;">
                        <%= link_to new_admins_backoffice_question_path, class: 'btn btn-success btn-circle' do %>
                            <i class="fas fa-plus"></i>
                        <% end %>
                      </th>                      
                    </tr>
                  </thead>                  
                  <tbody>                                        
                    <% @questions.each do |question| %>
                      <tr>
                        <td><%= question.id %></td>
                        <td><%= question.description %></td>                        
                        <td style="text-align:center; width: 150px;">                          
                          <%= link_to edit_admins_backoffice_question_path(question), class: 'btn btn-info btn-circle' do %>
                            <i class="fas fa-edit"></i>
                          <% end %>
                          <%= link_to admins_backoffice_question_path(question), method: :delete, class: 'btn btn-danger btn-circle', data: {confirm: "Deseja realmente apagar essa questão?"} do %>
                            <i class="fas fa-trash"></i>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>                                        
                  </tbody>
                </table>
