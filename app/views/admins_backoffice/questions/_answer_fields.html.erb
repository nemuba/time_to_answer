<div class="nested-fields">  
  <div class="form-group">
    <%= f.label :description %><br/>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-check form-check-inline">  
    <%= f.check_box :correct, class: 'form-check-input' %>
    <%= f.label :correct, class: 'form-check-label' %>
    <%= link_to_remove_association('Remover', f, class: 'btn btn-outline-danger btn-sm m-3') %>
  </div>
  
</div>