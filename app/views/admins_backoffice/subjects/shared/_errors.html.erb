<% if @subject.errors.any? %>
  <div class="row">
  <div class="col-lg-12">
    <div class="card border-danger mb-2">      
      <div class="card-body">        
        <p class="card-text">
          <ul>
            <% @subject.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </p>
      </div>
    </div>
  </div>  
</div>  
<% end %>